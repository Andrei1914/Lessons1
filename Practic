#2023/10/05 00:00|Домашняя работа по уроку "Способы вызова функции"
variant = ('.com', '.net', '.ru')
def send_email(message, recipient, sender):

    if sender != "university.help@gmail.com":
        print(f"НЕСТАНДАРТНЫЙ ОТПРАВИТЕЛЬ! Отправлено письмо с адреса {sender} на адрес {recipient}! ")
    else:
        if "@" in recipient:
            if recipient.endswith(variant):
                if recipient == sender:
                    print("Невозможно отправить письмо самому себе! ")
                else:
                    print(message, "Отправлен на: ", sender)
            else:
                print(f"Невозможно отправить письмо с адреса {sender} на адрес {recipient}! ")
        else:
            print(f"Невозможно отправить письмо с адреса {sender} на адрес {recipient}! ")

message = str(input("Введите текст письма: "))
recipient = str(input("Введите вашу почту: "))
sender = str(input("Введите отправителя: "))
send_email(message, recipient, sender)


#2023/10/07 00:00|Самостоятельная работа по уроку "Распаковка позиционных параметров".
def print_params(c, *values_list):
    print(values_list, c)

values_list = [12.21 , "Moscow"]
print_params(True, values_list)


#2023/10/08 00:00|Самостоятельная работа по уроку "Произвольное число параметров".

def single_root_words(root_word, *other_words):
    same_words = []
    for i in other_words:
        if root_word.lower() in i.lower() or i.lower() in root_word.lower():
            same_words.append(i)

    print(same_words)

other_words = ('rich', 'richiest', 'orichalcum', 'cheers', 'richies')
single_root_words('rich', *other_words)
